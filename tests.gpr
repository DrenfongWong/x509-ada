with "ahven";
with "common";

project Tests is

   for Languages use ("Ada", "C");
   for Main use ("test_runner.adb");
   for Source_Dirs use ("src/ada", "src/c/pkcs1", "tests");
   for Object_Dir use "obj/tests";

   Compiler_Switches := Common.Compiler_Switches & "-gnatwal";
   Linker_Switches   := ();

   package Compiler is
      for Default_Switches ("ada") use Compiler_Switches;
   end Compiler;

   package Linker is
      for Default_Switches ("ada") use Linker_Switches;
   end Linker;

   package Binder is
      for Default_Switches ("ada") use Common.Binder_Switches;
   end Binder;

end Tests;

